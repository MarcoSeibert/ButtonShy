{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Button Shy Games Registry",
  "description": "Schema for registering Button Shy games and their MVC components, including card and grid metadata.",
  "type": "object",
  "properties": {
    "games": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the game (e.g., 'Sprawlopolis')."
          },
          "typ": {
            "type": "string",
            "description": "Base game or expansion",
            "enum": ["Base", "Exp"]
          },
          "nr_of_cards": {
            "type": "integer",
            "description": "Total number of cards in the game."
          },
          "first_page_with_cards": {
            "type": "integer",
            "description": "First page in the PDF containing cards."
          },
          "double_sided_cards": {
            "type": "integer",
            "description": "Number of double-sided cards."
          },
          "single_sided_cards": {
            "type": "integer",
            "description": "Number of single-sided cards."
          },
          "backsides": {
            "type": "integer",
            "description": "Number of backside cards."
          },
          "grid_size": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "description": "Size of the game grid (e.g., [100, 74.5])."
          },
          "play_area": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "description": "Size of the play area (e.g., [100, 100])."
          },
          "mapping": {
            "type": "object",
            "items": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "properties": {
                  "card_id": {
                    "type": ["string", "integer"],
                    "description": "ID of the card"
                  },
                  "side": {
                    "type": "string",
                    "enum": ["front", "back"],
                    "description": "Side of the card"
                  }
                },
                "required": ["card_id", "side"]
              },
              "minProperties": 1,
              "maxProperties": 1,
              "description": "Each object contains a single key (e.g., '1_0') mapping to a card's side and ID."
            },
            "description": "Mapping of card positions and sides, where each entry is an object with a single key (e.g., '1_0') and a value describing the card's side and ID."
          },
          "mvc_components": {
            "type": "object",
            "properties": {
              "model": {
                "type": "string",
                "description": "Name of the Model class (e.g., 'SprawlopolisModel')."
              },
              "view": {
                "type": "string",
                "description": "Name of the View class (e.g., 'SprawlopolisView')."
              },
              "controller": {
                "type": "string",
                "description": "Name of the Controller class (e.g., 'SprawlopolisController')."
              }
            },
            "required": ["model", "view", "controller"],
            "description": "MVC component class names for the game."
          }
        },
        "required": ["name", "typ", "nr_of_cards", "mapping", "mvc_components"]
      }
    }
  },
  "required": ["games"]
}
